@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Role</th>
            <th scope="col">Description</th>
            <th scope="col">
                <a asp-action="Create" asp-controller="Role" asp-area="Dashboard" class="btn btn-success">Create</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Update" asp-controller="Role" asp-area="Dashboard" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                    <a asp-action="Delete" asp-controller="Role" asp-area="Dashboard" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

